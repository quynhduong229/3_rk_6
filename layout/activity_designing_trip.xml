<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="#D5C7F4"
    tools:context=".activity.DesigningTripActivity">

    <EditText
        android:id="@+id/designtrip_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box"
        android:backgroundTint="#C6FB1178"
        android:textColorHint="#1B010C"
        android:ems="10"
        android:inputType="textNoSuggestions"
        android:fontFamily="@font/arvo_bold_italic"
        android:hint="Location"
        android:layout_marginTop="200dp"
        android:padding="5dp"
        android:textColor="#1B010C"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062" />


    <EditText
        android:id="@+id/designlength_of_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Length of trip"
        android:fontFamily="@font/arvo_bold_italic"
        android:textSize="20dp"
        android:inputType="textNoSuggestions"
        android:padding="5dp"
        android:background="@drawable/box"
        android:backgroundTint="#C6FB1178"
        android:textColorHint="#1B010C"
        android:textColor="#1B010C"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.137" />

    <Button
        android:id="@+id/addtrip_design"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/darkPink"
        android:fontFamily="@font/arvo_bold_italic"
        android:text="Add Trip"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginStart="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96" />

</LinearLayout>
